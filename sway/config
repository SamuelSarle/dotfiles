#     status_command while date +'%Y-%m-%d %T'; do sleep 1; done

#     colors {
#         statusline #32323200
#         background #000000
#         focused_workspace #000000 #32323200 #5c5c5c
#         inactive_workspace #323232 #000000 #ffffff00
#     }
# }

font pango:dina 9

default_border pixel 0
hide_edge_borders smart

smart_gaps on
gaps inner 11
gaps outer 0

focus_follows_mouse no

client.focused #ffffff #ffffff #ffffff #ffffff
client.unfocused #000000 #000000 #000000 #000000
client.focused_inactive #000000 #000000 #000000 #000000

output * bg $background fill

include /etc/sway/config.d/*
